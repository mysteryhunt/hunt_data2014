{% include "round-head.html" %}

<div id="mh-controls">
  <a id="mh-back" href="{{ root }}">
    Back to Lobby
  </a>
  <a id="mh-elsewhere" href="javascript:mh.nav();">
    Elsewhere
  </a>
  {% if team.url == 'spoiler_alert' %}
  <a id="mh-answer" href="{{ root }}/round-solution/{{ round.round.url }}/">
    Solution
  </a>
  {% else %}
  <a id="mh-answer" href="javascript:mh.submit_answer();">
    {% if round.solved %}
    Solved!
    {% else %}
    Submit Answer
    {% endif %}
  </a>
  {% endif %}
</div>

<div id="mh-page">
  <div id="mh-banner">
    <div id="mh-title">
      {{ round.round.name }}
    </div>
  </div>

  <div id="mh-content">
    <ul>
      {% for puzzle in puzzles %}
      <li><a href="{{ root }}/puzzle/{{ puzzle.puzzle.url }}/">{{ puzzle.puzzle.name }}</a>
	{% endfor %}
    </ul>
  </div>

</div>

{% include "round-tail.html" %}
