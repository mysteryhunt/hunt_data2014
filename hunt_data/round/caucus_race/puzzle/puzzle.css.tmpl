{% include "common.css" %}
{% include "puzzle.css" %}

@media screen {
    body.mh-fancy {
	background: #69b873 url('{{ root }}/round/{{ round.round.url }}/puzzle_background.jpg') no-repeat top center;
    }
}

@media screen {
    .mh-fancy #mh-caucus-bird {
	float: left;
	padding: 10px;
    }
    .mh-plain #mh-caucus-bird {
	position: absolute;
	left: 10px;
	top: 10px;
    }
    .mh-plain #mh-banner {
        height: 155px;
    }
}

@media print {
    #mh-banner {
        height: 155px;
    }
    #mh-caucus-bird {
	position: absolute;
	left: 10px;
	top: 10px;
    }
}

