{% include "common.css" %}
{% include "puzzle.css" %}

@media screen {
    body.mh-fancy {
	background: #74b87d url('{{ root }}/round/{{ round.round.url }}/puzzle_background.jpg') no-repeat top center;
    }
}

@media screen {
    .mh-fancy #mh-knights-piece {
	float: left;
	padding: 25px;
    }
    .mh-plain #mh-knights-piece {
	position: absolute;
	left: 10px;
	top: 10px;
    }
    .mh-plain #mh-banner {
        height: 120px;
    }
}

@media print {
    #mh-banner {
        height: 120px;
    }
    #mh-knights-piece {
	position: absolute;
	left: 10px;
	top: 10px;
    }
}

