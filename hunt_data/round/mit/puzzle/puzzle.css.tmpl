{% include "common.css" %}

@media screen {
    body.mh-fancy {
	background: #d0ceca url('{{ root }}/round/{{ round.round.url }}/puzzle_background.jpg') no-repeat top center;
    }
}

#mh-submit-answer {
    position: absolute;
    top: 55px;
    right: 20px;
    width: 470px;
    height: 400px;
    background: aliceblue;
    padding: 20px;
    border-radius: 15px;
    border: 0px solid black;
    box-shadow: #222 5px 5px 10px;
    opacity: 0.9;
}
#mh-submit-answer-iframe {
    width: 470px;
    height: 400px;
    border: 0px;
}

#mh-mit-card {
}

@media screen {
    .mh-fancy #mh-mit-card {
	float: left;
	padding: 25px;
    }
    .mh-plain #mh-mit-card {
	position: absolute;
	left: 10px;
	top: 10px;
    }
}

@media print {
    #mh-mit-card {
	position: absolute;
	left: 10px;
	top: 10px;
    }
}

