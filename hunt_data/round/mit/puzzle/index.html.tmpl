<!DOCTYPE html>
<html>
<head>
<title>{{ puzzle.puzzle.name }} ({{ round.round.name }})</title>
<link rel="stylesheet" type="text/css" href="puzzle.css">
<link href="https://fonts.googleapis.com/css?family=Parisienne|Alice" rel="stylesheet" type="text/css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
</head>
<body class="mh-fancy">
  <div id="mh-outer">
    <div id="mh-controls">
      <a id="mh-back" href="{{ root }}/round/{{ round.round.url }}">
	Back to {{ round.round.name }}
      </a>
      <a id="mh-plain-toggle" href="javascript:mh.plain_toggle();">
	Printable
      </a>
      {% if puzzle.solved %}
      <span id="mh-answer">
	Solved!
      </span>
      {% else %}
      <a id="mh-answer" href="javascript:mh.submit_answer();">
	Submit Answer
      </a>
      {% endif %}
    </div>
    <div id="mh-page">
      <div id="mh-banner">
        <img id="mh-mit-card" src="card.png">
	<div id="mh-title">
	  {{ puzzle.puzzle.name }}
	</div>
      </div>
      <div id="mh-content">
        {{ index_html|safe }}
      </div>
      <div id="mh-submit-answer" style="display: none;">
	<div id="mh-submit-answer-inner" style="white-space: nowrap; overflow-x: hidden;">
	  Team: Spoiler Alert asdf asdf asdf asdf asdf asdf asdf asdf asdf asdf asdf asdf<br>
	  Puzzle: Sneaky Fox asdf asdf asdf asdf asdf asdf asdf asdf asdf asdf asdf asdf<br>
	  <input type="submit" value="Submit" style="float: right;">
	  <input type="text" size="40">
	  <div class="mh-recent-answers">
	    ALPHA<br>
	    BETA<br>
      GAMMA<br>
	    DELTA<br>
	  </div>
	</div>
      </div>
    </div>
  </div>
  <script src="puzzle.js"></script>
</body>
</html>
