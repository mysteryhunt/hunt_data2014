{% include "common.css" %}

@media screen {
    body.mh-fancy {
	background: #d0ceca url('puzzle_background.jpg') no-repeat top center;
    }
}

.mh-banner {
    position: relative;
}

.mh-drink-me {
    position: absolute;
    top: 55px;
}

.mh-map-location {
    position: absolute;
    width: 30px;
}

.mh-list-solved {
    list-style-type: none;
    background: url('location_solved.png') no-repeat 0px 2px;
    height: 26px;
    padding-left: 25px;
    padding-top: 2px;
}

.mh-list-unsolved {
    list-style-type: none;
    background: url('location_unsolved.png') no-repeat 0px 2px;
    height: 26px;
    padding-left: 25px;
    padding-top: 2px;
}

#mh-submit-answer {
    position: absolute;
    top: 55px;
    right: 20px;
    width: 470px;
    height: 400px;
    background: aliceblue;
    padding: 20px;
    border-radius: 15px;
    border: 0px solid black;
    box-shadow: #222 5px 5px 10px;
}
#mh-submit-answer-iframe {
    width: 470px;
    height: 400px;
    border: 0px;
}
