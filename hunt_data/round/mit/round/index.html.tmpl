{% include "round-head.html" %}
<div id="mh-controls">
  <a id="mh-back" href="{{ root }}/">
    Back to Lobby 7
  </a>
  <a id="mh-elsewhere" href="javascript:mh.nav();">
    Elsewhere
  </a>
  <a id="mh-answer" href="javascript:mh.submit_answer();">
    {% if bait_ready < 3 %}
    Submit Bait
    {% else %}
    Creatures Baited!
    {% endif %}
  </a>
</div>

<div id="mh-page">
  <div id="mh-banner">
    <div id="mh-title">
      {{ round.round.name }}
    </div>
    {% if vial1 > -1 %}
    <div class="mh-drink-me-div" style="right: 130px;">
      <img class="mh-drink-me" src="drinkme{{ vial1x|stringformat:"02d" }}.png" />
      <div class="mh-drink-me-num">{{ vial1 }}</div>
      <div class="mh-drink-me-den">{{ vial1t }}</div>
    </div>
    {% endif %}
    {% if vial2 > -1 %}
    <div class="mh-drink-me-div" style="right: 70px;">
      <img class="mh-drink-me" src="drinkme{{ vial2x|stringformat:"02d" }}.png" />
      <div class="mh-drink-me-num">{{ vial2 }}</div>
      <div class="mh-drink-me-den">{{ vial2t }}</div>
    </div>
    {% endif %}
    {% if vial3 > -1 %}
    <div class="mh-drink-me-div" style="right: 10px;">
      <img class="mh-drink-me" src="drinkme{{ vial3x|stringformat:"02d" }}.png" />
      <div class="mh-drink-me-num">{{ vial3 }}</div>
      <div class="mh-drink-me-den">{{ vial3t }}</div>
    </div>
    {% endif %}
  </div>

  <div id="mh-content">
    <div style="position: relative;">
      <img src="map.jpg" />
      {% for puzzle in puzzles %}
      <div class="mh-map-location" style=
	   {% if puzzle.location.name == "W20" %}
	   "top: 118px; left: 153px;"
	   {% elif puzzle.location.name == "32" %}
	   "top: 37px; left: 682px;"
	   {% elif puzzle.location.name == "14" %}
	   "top: 209px; left: 663px;"
	   {% elif puzzle.location.name == "W11" %}
	   "top: 10px; left 10px;"
	   {% elif puzzle.location.name == "33" %}
	   "top: 81px; left: 288px;"
	   {% elif puzzle.location.name == "34" %}
	   "top: 41px; left: 482px;"
	   {% elif puzzle.location.name == "66" %}
	   "top: 134px; left: 842px;"
	   {% elif puzzle.location.name == "2" %}
	   "top: 10px; left 10px;"
	   {% elif puzzle.location.name == "50" %}
           "top: 228px; left: 821px;"
	   {% elif puzzle.location.name == "5" %}
	   "top: 173px; left: 250px;"
	   {% elif puzzle.location.name == "1" %}
           "top: 214px; left: 290px;"
	   {% elif puzzle.location.name == "37" %}
           "top: 55px; left: 357px;"
	   {% elif puzzle.location.name == "12" %}
           "top: 80px; left: 489px;"
	   {% elif puzzle.location.name == "38" %}
	   "top: 41px; left: 441px;"
	   {% elif puzzle.location.name == "56" %}
	   "top: 136px; left: 646px;"
	   {% elif puzzle.location.name == "6" %}
	   "top: 152px; left: 585px;"
	   {% elif puzzle.location.name == "Killian Court" %}
	   "top: 238px; left: 423px;"
	   {% elif puzzle.location.name == "54" %}
           "top: 158px; left: 746px;"
	   {% elif puzzle.location.name == "10" %}
	   "top: 153px; left: 425px;"
	   {% elif puzzle.location.name == "4" %}
	   "top: 138px; left: 479px;"
	   {% elif puzzle.location.name == "8" %}
	   "top: 10px; left 10px;"
	   {% elif puzzle.location.name == "7" %}
           "top: 128px; left: 267px;"
	   {% elif puzzle.location.name == "26" %}
           "top: 99px; left: 552px;"
	   {% elif puzzle.location.name == "13" %}
           "top: 100px; left: 376px;"
	   {% else %}
	   "{{ puzzle.location }}"
	   {% endif %}
	   >
	<a href="{{ root }}/puzzle/{{ puzzle.puzzle.url }}/">
	  <img class="mh-map-card" title="{{puzzle.puzzle.name}}" src="{{ root }}/puzzle/{{ puzzle.puzzle.url }}/card.png" />
	  {% if puzzle.solved %}
	  <img class="mh-map-card" title="{{puzzle.puzzle.name}}" src="solved.png" />
	  {% endif %}
	</a>
      </div>
      {% endfor %}
      {% if portal1 == "open" %}
      {% elif portal1 == "visible" %}
      {% endif %}
      {% if portal2 == "open" %}
      {% elif portal2 == "visible" %}
      {% endif %}
      {% if portal3 == "open" %}
      {% elif portal3 == "visible" %}
      {% endif %}
    </div>
  
    {% for puzzle in puzzles %}
    <div class="mh-puzzle">
      <a class="mh-puzzle-link" href="{{ root }}/puzzle/{{ puzzle.puzzle.url }}/">
	<img class="mh-puzzle-card" src="{{ root }}/puzzle/{{ puzzle.puzzle.url }}/card.png" />
	{% if puzzle.solved %}
	<img class="mh-puzzle-solved" src="solved.png" />
	{% endif %}
	{% if puzzle.puzzle.url == 'down_the_rabbit_hole_2' %}
	<span class="mh-puzzle-name" style="top: 0px;">
	  {{ puzzle.puzzle.name }}
	</span>
	{% else %}
	<span class="mh-puzzle-name">
	  {{ puzzle.puzzle.name }}
	</span>
	{% endif %}
      </a>
    </div>
    {% endfor %}
  </div>

</div>

{% include "round-tail.html" %}
